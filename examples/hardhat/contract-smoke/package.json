{
  "name": "hedera-hardhat-smoke",
  "version": "1.0.0",
  "description": "Hardhat smoke test for Hedera Local Node and Solo",
  "scripts": {
    "compile": "hardhat compile",
    "test": "hardhat test",
    "test:localnode": "hardhat test --network localnode",
    "test:solo": "hardhat test --network solo",
    "deploy": "hardhat run scripts/deploy.ts --network localnode",
    "deploy:solo": "hardhat run scripts/deploy.ts --network solo",
    "interact": "hardhat run scripts/interact.ts --network localnode",
    "clean": "hardhat clean"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "hardhat": "^2.19.0",
    "typescript": "^5.3.0",
    "ts-node": "^10.9.0",
    "@types/node": "^20.0.0",
    "dotenv": "^16.3.0"
  }
}
